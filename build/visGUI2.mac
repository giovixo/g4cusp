# Specify style (surface, wireframe, auxiliary edges,...)
/vis/viewer/set/style wireframe
/vis/viewer/set/auxiliaryEdge true
/vis/viewer/set/lineSegmentsPerCircle 100

# Define the primary particle (photon)
/gps/particle gamma
/gps/energy 60 keV
/gps/direction 0.0  -1.0 0.0
/gps/polarization 0. 0. 0.

/gps/pos/type Plane
/gps/pos/shape Square
/gps/pos/centre 0.0 100.0 0.0 mm
/gps/pos/halfx 50.0 mm
/gps/pos/halfy 50.0 mm
/gps/pos/rot1 1 0 0
/gps/pos/rot2 0 0 1

